<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR"> <!--Configuration status="ERROR" ca sa nu mai apara mesajele de jurnalizare-->
    <Appenders>
        <File name="FisierLog" fileName="logs/app.log">
            <PatternLayout pattern="%d{DATE} [%t] %class{36} %L %M - %msg%xEx%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="FisierLog"/>
        </Root>
    </Loggers>
</Configuration>